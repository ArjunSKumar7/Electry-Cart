<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Banner Management</h2>
          <form
            action="/admin/banner"
            method="post"
            enctype="multipart/form-data"
          
          >
            <label for="">Title</label>
            <input type="text" name="bannertitle" class="form-control" />

            <label for="">Description</label>
            <input type="text" name="bannerdescription" class="form-control" />

            <label for=""> Link</label>
            <input type="text" name="bannerlink" class="form-control" />

        

          <label for="">Image</label>
          <div>
            <img src="" alt="image1" width="90px" height="90px" id="bannerimg">
          </div>
          <input type="file" name="bannerimage" class="form-control" onchange="display(event)"/>

            
            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- Table section --> 
  <section w-50 mx-auto>
    <div class="card-body">
      <div class="row w-50 mt-5 mx-auto">
        <div class="table-responsive">
          <div class="table-responsive">
            <table class="table align-middle table-nowrap mb-0">
              <thead class="table-light">
                <tr>
                  <th class="align-middle" scope="col">No</th>
                  <th class="align-middle" scope="col">Banner title</th>
                  <th class="align-middle" scope="col">Option</th>
                </tr>
              </thead>
              <tbody>
                <% getbanner.forEach(function(getbanner,index) { %>
                  <tr>
                    <td><%= index+1 %></td>
                    <td><%= getbanner.title%></td>
                    
    
                    <td>
                      <a href ="/admin/editbanner/<%=getbanner._id %>"  class="btn btn-success">Edit</a>
                      <a href="" class="btn btn-xs btn-danger btn-danger"> Delete</a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- table-responsive end// -->
      </div>
    </div>
  </section>

  <script>
    function display(event){
    document.getElementById('bannerimg').src= URL.createObjectURL(event.target.files[0])
    
  }
  </script>

  
  