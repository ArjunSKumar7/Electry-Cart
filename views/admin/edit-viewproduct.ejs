<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Product</h2>
          <form action="/admin/edit_product/<%=editproduct._id %>" method="POST" enctype="multipart/form-data">
            <label for="">Prodcut Name</label>
            <input type="text" name="name" class="form-control" value="<%=editproduct.Productname%>" />
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" value="<%=editproduct.ProductDescription%>" />
  
            <label for="">Price</label>
            <input type="text" name="price" class="form-control" value="<%=editproduct.Price%>" />
  
            
            <label for="cars">Category</label>
           
            <select class="form-select" name="category" id="cars">
              <% procategory.forEach(function(procategory) { %>
              <option value="<%=procategory.CategoryName %>"><%=procategory.CategoryName %></option>
              <% } )%>
            </select>
          
            <label for="">Quantity</label>
            <input type="text" name="quantity" class="form-control" value="<%=editproduct.Quantity%>"   required pattern="[0-9]+" title="Please enter only numeric values"/>
  
            <label for="">Image</label>
            <img src="/uploads/<%=editproduct.Image[0]%>" alt=""  id="image1"  style="width:100px;height:auto" id="imgview">
            <input type="file" name="image1" class="form-control"  onchange="display1(event)"/>

            <img src="/uploads/<%=editproduct.Image[1]%>" alt=""  id="image2"  style="width:100px;height:auto" id="imgview">
            <input type="file" name="image2" class="form-control"  onchange="display2(event)"/>

            <img src="/uploads/<%=editproduct.Image[2]%>" alt="" id="image3"  style="width:100px;height:auto" id="imgview">
            <input type="file" name="image3" class="form-control"  onchange="display3(event)"/>

            <img src="/uploads/<%=editproduct.Image[3]%>" alt="" id="image4" style="width:100px;height:auto" id="imgview">
            <input type="file" name="image4" class="form-control"  onchange="display4(event)"/>
  
            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script>
    function display1(event){
      document.getElementById('image1').src= URL.createObjectURL(event.target.files[0])
      
    }
    function display2(event){
      document.getElementById('image2').src= URL.createObjectURL(event.target.files[0])
      
    }
    function display3(event){
      document.getElementById('image3').src= URL.createObjectURL(event.target.files[0])
      
    }
    function display4(event){
      document.getElementById('image4').src= URL.createObjectURL(event.target.files[0])
      
    }
    
  </script>